@using Capstone.Web.Models
@model List<WeatherForecastModel>

@{
    ViewBag.Title = "WeatherForecast";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Five Day Forecast </h2>

<div class="weatherContainer">
    @foreach (WeatherForecastModel w in Model)
    {
        <div class="weatherInfo">
            <div id="weatherPicture"><img src="~/Content/img/weather/@(w.Forecast).png" /></div>
            <div id="weatherDetails">
                <p>
                    High: @w.High F
                </p>
                <p>Low: @w.Low F</p>
                <p>@w.GetWeatherStatement(w.Forecast, w.Low, w.High)</p>
            </div>
            <p></p>
        </div>
    }
</div>
