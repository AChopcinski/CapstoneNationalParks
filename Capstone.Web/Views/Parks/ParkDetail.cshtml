@using Capstone.Web.Models
@model ParksModel


@{
    ViewBag.Title = "ParkDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




    <div class="listContainer">

        <div class="listText">
            <p> Founded in @Model.YearFounded, in the state of @Model.State, @Model.ParkName has @Model.MilesOfTrail miles of trail
            across @Model.Acreage acres. </p>
            <p> @Model.ParkName is @Model.ElevationInFeet feet above sea level, and is considered a @Model.Climate biome, home to @Model.NumberOfAnimalSpecies different animal species.</p>
            <p> @Model.ParkName had @Model.AnnualVisitorCount visitors last year.</p>
            <p>There are @Model.NumberOfCampsites campsites and the entry fee to the park is $@Model.EntryFee.00.</p>
        </div>
        <div class="parkDetailContainer">
            <div class="listContainer">
                <div class="parkDetailImage">
                    <img src="~/Content/img/parks/@(Model.ParkCode).jpg" />
                </div>
                <div class="quoteNameContainer">
                    <div class="parkNameState">
                        <h3>@Model.ParkName </h3>
                    </div>
                    <div class="quote">
                        <p>
                            <span style="font-family:Papyrus; font-size:200%"><em>"@Model.InspirationalQuote"</em></span>
                            <br /> <em> -@Model.InspirationalQuoteSource </em>
                        </p>
                    </div>
                </div>
            </div>
            <div class="parkDescription">
                <p><em>@Model.ParkDescription</em></p>
            </div>
        </div>
    </div>

<hr/>
    <button>@Html.ActionLink("Get forecast in Farenheit", "GetWeatherF", "WeatherForecast", new { id = (@Model.ParkCode) }, null)</button>
    <button>@Html.ActionLink("Get forecast in Celsius", "GetWeatherC", "WeatherForecast", new { id = (@Model.ParkCode) }, null)</button>
